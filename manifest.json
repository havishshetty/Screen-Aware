{
    "manifest_version": 3,
    "name": "Screen Time Tracker",
    "version": "1.0",
    "description": "Tracks time spent on different websites",
    "permissions": [
      "storage",
      "tabs",
      "activeTab",
      "notifications",
      "alarms"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    }
  }